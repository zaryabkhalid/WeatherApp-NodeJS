<!DOCTYPE html>
<html lang="en">
<head>
   {{>headerLinks}}
</head>
<body>
    
    {{>nav}}

    
<div class="weather_container">

    <div class="form-container">
        <form class="form">
            <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
            <input type="submit" value="Search" id="submitBtn">
        </form>
    </div>



    <div class="tempInfo">
        <div class="top-layer">
            <p id="day">Day</p>
            <p id="date">Date</p>
        </div>

        <div class="main-layer">
            <p id="city_name">Get Output here</p>
            <div class="middle_layer data_info data_hide">
                <p id="temp"><span id="temp_real_val">32</span><sup>o</sup>C</p>
                <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i> </p>
            </div>
        </div>
    </div>
</div>


{{>footer}}

<script src="js/main.js"></script>
</body>
</html>